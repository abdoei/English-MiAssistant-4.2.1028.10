<?xml version="1.0" encoding="utf-8"?>
<Window size="720,465" mininfo="720,460" caption="0,0,0,80" showdirty="false">
  <Include source="style.xml" />
  <VerticalLayout name="bg" childalign="center" align="center">
  
	<TabLayout name="check_tab" selectedid="0">
		<!--正在校验 0-->
		<VerticalLayout name="ing_layout" >
			<VerticalLayout height="120" />
			<VerticalLayout name="checking" width="74" height="74" >
				<GifAnim bkimage="imgs/loading_op.gif" width="74" height="74"/>
			</VerticalLayout>
			<VerticalLayout height="25" />
			<HorizontalLayout height="30">
				<HorizontalLayout width="240" />
				<Label name="ing_tip" text="正在校验已选择的刷机包" font="18" width="200" textcolor="#444c58" />
				<HorizontalLayout width="2" />
				<VerticalLayout width="18" >
					<VerticalLayout height="19" />
					<GifAnim bkimage="imgs/point.gif" width="18" height="5"/>
				</VerticalLayout>
			</HorizontalLayout >
			<Label name="ing_rom" text="当前刷机包：1212121212121211121212.zip" height="20" textcolor="#8b94a5"  />
			<Label text="校验刷机包一般需要10s到30s，请勿断开手机连接" font="13" height="30" textcolor="#8b94a5"/>
			<VerticalLayout height="100" />
			<Button name="ing_select" text="重新选择刷机包" font="14" textcolor="#444c58" height="38" width="130" />
		</VerticalLayout>
		
		<!--校验失败 1-->
		<VerticalLayout name="err_layout" >
			<VerticalLayout height="120" />
			<Control bkimage="imgs\err.png" height="74" width="74"/>
			<VerticalLayout height="25" />
			<Label name="err_tip" text="刷机包校验失败" font="18" textcolor="#444c58" />
			<Label name="err_rom" text="当前刷机包：1212121212121211121212.zip" font="15" height="20" textcolor="#8b94a5"  />
			<Label name="suggest_rom" text="当前刷机包：1212121212121211121212.zip" font="15" height="30" textcolor="#f16362"/>
			<VerticalLayout height="100" />
			<Button name="err_select" text="重新选择刷机包" font="14" textcolor="#444c58" height="38" width="130" />
		</VerticalLayout>
		
		<!--清除数据 2-->
		<VerticalLayout name="clearn_layout" >
			<VerticalLayout height="120" />
			<Control bkimage="imgs\waring.png" height="74" width="74"/>
			<VerticalLayout height="25" />
			<Label name="clearn_tip" text="确定要清除数据升级吗？" font="18" textcolor="#444c58" />
			<Label name="clearn_msg" text="稳定版与开发版切换升级，会清除数据，手机上的数据将丢失！" font="15" height="20" textcolor="#8b94a5"  />
			<VerticalLayout height="110" />
			<HorizontalLayout childalign="center" childvalign="enter">
				<Button name="sure" text="升级" font="14" textcolor="#444c58" padding="220,0,50,0" height="38" width="110" />
				<Button name="cancel" text="不升级" font="14" textcolor="#444c58" height="38" width="110" />
			</HorizontalLayout>
		</VerticalLayout>
		
		<!--清除数据 3-->
		<VerticalLayout name="clearn_sec_layout" >
			<VerticalLayout height="120" />
			<Control bkimage="imgs\waring.png" height="74" width="74"/>
			<VerticalLayout height="25" />
			<Label text="确认要清除数据吗？" font="18" textcolor="#444c58" />
			<Label text="清除数据，手机上的数据将丢失" font="15" height="20" textcolor="#8b94a5"  />
			<VerticalLayout height="110" />
			<HorizontalLayout childalign="center" childvalign="enter">
				<Button name="sure_sec" text="清除" font="14" textcolor="#444c58" padding="220,0,50,0" height="38" width="110" />
				<Button name="cancel_sec" text="不清除" font="14" textcolor="#444c58" height="38" width="110" />
			</HorizontalLayout>
		</VerticalLayout>
	</TabLayout>
  </VerticalLayout>
</Window>
